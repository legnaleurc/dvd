root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

[*.{hpp,cpp,py}]
indent_style = space
indent_size = 4

[*.{js,jsx,scss,html}]
indent_style = space
indent_size = 2

[*.md]
indent_style = space
indent_size = 4

[CMakeLists.txt]
indent_style = space
indent_size = 4
